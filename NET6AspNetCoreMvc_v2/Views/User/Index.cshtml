@model List<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col">
        <h1 class="diplay-4">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>Kullanıcı Ekle</a>

    </div>
</div>


<div class="row">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Username</th>
                    <th>Locked</th>
                    <th>Role</th>
                    <th>Created At</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.NameSurname</td>
                        <td>@item.UserName</td>
                        <td>
                            @if (item.Locked)
                            {
                                //fa: font awasome
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>@item.Role</td>
                        <td>@item.CreatedAt</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2" ></i>Kaldır</a>
                        </td>

                    </tr>
                }        


            </tbody>
        
        
        
        </table>


    </div>



</div>