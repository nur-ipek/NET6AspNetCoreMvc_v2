@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mt-4">
    <div class="col-6 offset-6 my-3">
        <div class="md-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>

    </div>

    <div class="col-6">

        @*Form elementine resim upload ediceksek, enctype att. eklenmeli. !!!!*@

        <form method="post" asp-action="ProfileChangeImage" enctype="multipart/form-data">
            <div class="text-center mb-3">
                <img src="~/uploads/no-image.jpg" class="img-thumbnail rounded-circle"  width="250" />

            </div>
            <div class="form-group mb-3">
                <label class="form-label small">Profile Image</label>

                @* accept att. ekliyoruz. !!!!*@

                <input name="file" type="file" class="form-control" accept=".jpg, .jpeg"></input>
                <div class="small">
                    <i class="fa fa-info-circle me-2 mt-2"></i>Sadece .jpg dosyaları yüklenir.
                </div>


                <div class="text-center  mt-3">
                    <button class="btn btn-secondary" type="submit">Kayıt Et</button>

                </div>
            </div>

        </form>
    </div>

    <div class="col-6">

        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
                <label class="form-label small"> Name Surname</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2" value=@ViewData["username"]>
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Save</button>
                </div>

            </div>
        </form>

        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small">New Password</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="P@ssW0rd." aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Save</button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
                {
                    <span class="text-success small">Password updated.</span>
                }
            </div>
        </form>

    </div>
</div>

@section Scripts{
    @if (ViewData["result"] != null)
    {
        <script>
            toastr["success"]("Şifre değiştirme işlemi BAŞARILI !")


        </script>
    }


}