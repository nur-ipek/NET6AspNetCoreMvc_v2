@*Bu sayfanın modeli*@
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-3">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
           @* Genel hataları göstermek istersem*@
           @*ModelOnly-> Property dışındakileri göster!*@
            <div asp-validation-summary="ModelOnly" class="text-danger small">
            </div>
            <div class="form-gruop mt-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="johndoe"/>
                @*Username ile ilgili hataları bu class içerisinde göster.*@
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-gruop mt-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="P@ssW0rd." />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-gruop mt-3 d-grid">
                <button type="submit" class="btn btn-info d-block"><i class="fa-solid fa-arrow-right-to-bracket me-2"></i>Login</button>
            </div>
        </form>
    </div>
</div>
